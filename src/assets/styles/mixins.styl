cleanDefaultStyle()
    appearance: none
    border: none
    outline: none

btn(itscolor, border = false)
    padding: 0 10px
    border-radius: 5px
    cursor: pointer
    cleanDefaultStyle()

    if (border == true)
        border: 1px solid itscolor
    else
        background-color: itscolor
        color: rgb(255, 255, 255)

primaryBtn()
    btn(rgb(252, 157, 154))

primaryBorderBtn()
    btn(rgb(252, 157, 154), true)

infoBtn()
    btn(rgb(131, 175, 155))